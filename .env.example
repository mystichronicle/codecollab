# CodeCollab - Environment Configuration
# Copy this file to .env and update with your values

# Environment
ENVIRONMENT=development

# Security (REQUIRED - Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))")
SECRET_KEY=your_secret_key_here_change_me

# JWT Configuration
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database URLs
DATABASE_URL=postgresql://codecollab:dev_password@postgres:5432/codecollab
MONGODB_URL=mongodb://codecollab:dev_password@mongodb:27017/codecollab?authSource=admin
REDIS_URL=redis://redis:6379/0
RABBITMQ_URL=amqp://codecollab:dev_password@rabbitmq:5672/

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8000

# Service URLs
EXECUTION_SERVICE_URL=http://localhost:8004
COLLAB_SERVICE_URL=http://collab-service:8002

# Frontend Configuration
VITE_API_GATEWAY_URL=http://localhost:8000
VITE_COLLAB_WS_URL=ws://localhost:8002

# Production Settings (uncomment and set for production)
# ENVIRONMENT=production
# SECRET_KEY=<generate-strong-secret-key>
# DATABASE_URL=postgresql://user:password@prod-db:5432/codecollab
# MONGODB_URL=mongodb://user:password@prod-mongo:27017/codecollab
# CORS_ORIGINS=https://yourdomain.com
